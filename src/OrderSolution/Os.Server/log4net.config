<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <appender name="NovaTouchFiscalServiceFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs/%date{yyyy-MM-dd}Fiscal.log" />
    <appendToFile value="true" />
    <maximumFileSize value="10MB" />
    <maxSizeRollBackups value="2" />
    <immediateFlush value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd}|%date{HH:mm:ss,fff}|%level|%logger|%message%newline" />
    </layout>
  </appender>

  <root>
    <level value="INFO" />
    <appender-ref ref="NovaTouchFiscalServiceFile" />
  </root>

  <logger name="FISCAL-API">
    <level value="INFO" />
    <appender-ref ref="NovaTouchFiscalServiceFile" />
  </logger>
  <logger name="FISCAL-PROVIDER">
    <level value="INFO" />
    <appender-ref ref="NovaTouchFiscalServiceFile" />
  </logger>
  <logger name="FISCAL-DATA">
    <level value="INFO" />
    <appender-ref ref="NovaTouchFiscalServiceFile" />
  </logger>

</log4net>